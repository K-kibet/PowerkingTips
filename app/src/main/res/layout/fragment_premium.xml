<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PremiumFragment">
    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_tip"/>
    <LinearLayout
        android:id="@+id/noUserLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/baseline_workspace_premium_24"
            android:layout_gravity="center"
            app:tint="@color/yellow"
            android:contentDescription="@string/premium" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/oops"
            android:textStyle="bold"
            android:textSize="40sp"
            android:gravity="center"
            android:textColor="@color/yellow" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continue_payment"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/yellow"
            android:layout_marginVertical="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpgrade"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/upgrade"
            android:layout_marginVertical="10dp"
            android:drawableTint="@color/green"
            android:textColor="@color/green"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/green"
            app:strokeWidth="1dp"
            android:drawableEnd="@drawable/baseline_rocket_launch_24"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/adViewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>